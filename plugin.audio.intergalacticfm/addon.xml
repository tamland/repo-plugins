<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.intergalacticfm" name="Intergalactic FM" version="3.0.3" provider-name="Dreamer, Pander">
<requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.urllib3" version="2.2.3"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
    <provides>audio</provides>
</extension>
<extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">No Station Such Dedication</summary>
    <description lang="en_GB">Add-on for the audio streams of the online radio station Intergalacic FM.

See also the video plugin. Please consider donating at https://intergalactic.fm to keep us in orbit.</description>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <screenshot>screenshots/s1.jpg</screenshot>
        <screenshot>screenshots/s2.jpg</screenshot>
        <screenshot>screenshots/s3.jpg</screenshot>    
    </assets>
    <news>Updated with latest artwork metadata</news>
    <license>GPL-3.0-or-later</license>
    <source>https://github.com/intergalacticfm/plugin.audio.intergalacticfm</source>
    <website>https://www.intergalactic.fm</website>
</extension>
</addon>
